# Environment Configuration
ENVIRONMENT=development  # development, testing, production

# Supabase Configuration (Required)
SUPABASE_URL=your-project-url
SUPABASE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Database Configuration (Optional: For direct database access)
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# JWT Configuration
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_API_KEY=your_discord_api_key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=True

# Redis Configuration (for rate limiting and caching)
# Set DISABLE_RATE_LIMITING=true to run without Redis (recommended for production)
DISABLE_RATE_LIMITING=true  # Set to false if you want rate limiting with Redis
REDIS_URL=redis://localhost:6379/0  # Only needed if DISABLE_RATE_LIMITING=false
REDIS_MAX_CONNECTIONS=20  # Only needed if DISABLE_RATE_LIMITING=false

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_ANONYMOUS=10/minute
RATE_LIMIT_AUTHENTICATED=1000/hour
RATE_LIMIT_ADMIN=5000/hour

# Caching Configuration
CACHE_TTL=300
CACHE_ENABLED=True

# App Configuration
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:10000

# API Configuration
API_V1_STR=/v1
PROJECT_NAME=NBA 2K Global Rankings API
VERSION=1.0.0

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO 